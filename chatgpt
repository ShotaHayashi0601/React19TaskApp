import CustomModal from '@/components/atoms/CustomModal';
import React from 'react';

const AddTaskForm = () => {
  return (
    <CustomModal>
      <></>
    </CustomModal>
  );
};

export default AddTaskForm;

上記のCustomModalの中にフォームを作成してほしい。shadcn/uiのコンポーネントを使用し、ZOD+RHFで実装してほしい、フォームのアクションはReact19のuseActionStateを使用してほしい。
zodのバリデーション定義は以下のとおりである。データベースとの連携はこれから作るので、フォームアクションが行われたらフォームの内容をコンソールに表示したい。バリデーションは、入力の変更がされたときに発火してほしい。
プレースホルダーを指定して、エラーメッセージも表示するようにしてほしい。
import { z } from 'zod';

export const taskFormSchema = z.object({
  title: z
    .string({
      required_error: '必須です',
      invalid_type_error: '文字列を入力してください',
    })
    .min(2, { message: '2文字以上入力してください' })
    .max(100, { message: '20文字以内にしてください' }),
  description: z.string().max(1000, { message: '1000文字以内にしてください' }),
  dueDate: z.date().nullable(),
  expectedTime: z
    .number()
    .int()
    .min(0, { message: '0以上の数値を入力してください' }),
  actualTime: z
    .number()
    .int()
    .min(0, { message: '0以上の数値を入力してください' }),
});



